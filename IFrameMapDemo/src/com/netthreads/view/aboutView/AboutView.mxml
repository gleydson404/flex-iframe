<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="absolute" 
	width="400" height="300">
	
	<mx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager;

			import com.netthreads.model.MetaDataLocator;

			private var _onClose:Function = null;

			[Bindable] private var metaData:MetaDataLocator = MetaDataLocator.getInstance();
			
	        /**
	        * Open popup window and centre it on the parent.
	        *
	        */
            public function open(parent:DisplayObject, onClose:Function=null):void 
            {
            	// Optional 'close' handler.
            	_onClose = onClose;
            	
                PopUpManager.addPopUp(this, parent, true);
                PopUpManager.centerPopUp(this);
            }
            
	        /**
	        * Close popup window.
	        *
	        */
            public function close():void
            {
                PopUpManager.removePopUp(this);
                
                if (_onClose!=null)
                {
                	_onClose();
                }
            }
            
	        /**
	        * Handle clicking on close button.
	        *
	        */
            private function onClose(evt:Event):void 
            {
            	close();
            }

	        /**
	        * Launch page with target url.
	        *
	        */
	        private function jumpTo(url:String):void
	        {
	            var link:URLRequest=new URLRequest(url);
	            navigateToURL(link,"_this");
	        }    
            				
		]]>
	</mx:Script>
	
	<mx:HBox id="aboutContents"
			horizontalCenter="0"
			verticalCenter="0">

		<mx:VBox>		
		    <mx:Text fontSize="9" color="#000000" fontThickness="1" text="{metaData.displayTitle}" visible="true"/>
		    <mx:Text fontSize="9" color="#000000" fontThickness="1" text="Version {metaData.displayVersion}" visible="true"/>
		    <mx:Text fontSize="9" color="#000000" text="{metaData.displayCopyright}" visible="true"/>
		    <mx:LinkButton fontSize="9" color="#000000"  label="{metaData.displayLink}" click="jumpTo('http://www.netthreads.co.uk');"/> 
			
			<mx:Spacer height="100%"/>
			
			<mx:Button id="okButton" label="Close" click="onClose(event)"/>
		</mx:VBox>

	</mx:HBox>
</mx:TitleWindow>
