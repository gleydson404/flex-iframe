<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml"
		xmlns:frame="com.netthreads.util.*"
        label="Map"
        verticalScrollPolicy="off"
        creationComplete="init()">
    
    <mx:Script>
        <![CDATA[
    	import com.netthreads.view.controller.MapViewController;
    	import mx.events.ResizeEvent;
        
        [Bindable] public var _controller:MapViewController = null;
        
        private function init():void
        {
        	// We are going to do some magic 
            mapView.addEventListener(ResizeEvent.RESIZE, onResize);
        }

        /**
        * Set controller.
        * 
        */
        public function set controller(value:MapViewController): void
        {
            _controller = value;

            invalidateProperties();                
        }
        
        private function onResize(event:Event):void
        {
            _controller.resize();
        }
         
        ]]>
    </mx:Script>

	<frame:IFrame source="OSMapSource.html"
		id="mapView"
		width="100%" 
		height="100%"/>
	
            
</mx:Box>
    
